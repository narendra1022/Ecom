<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_shadow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="#B8D9FA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_content"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/g_blue"
        app:layout_constraintBottom_toBottomOf="@+id/img_shadow"
        app:layout_constraintEnd_toEndOf="@+id/img_shadow"
        app:layout_constraintStart_toStartOf="@+id/img_shadow"
        app:layout_constraintTop_toTopOf="@+id/img_shadow" />


    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="S"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/img_content"
        app:layout_constraintEnd_toEndOf="@id/img_content"
        app:layout_constraintStart_toStartOf="@id/img_content"
        app:layout_constraintTop_toTopOf="@id/img_content" />

    <TextView
        android:id="@+id/img_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_check_24"
        app:layout_constraintBottom_toBottomOf="@id/img_content"
        app:layout_constraintEnd_toEndOf="@id/img_content"
        app:layout_constraintStart_toStartOf="@id/img_content"
        app:layout_constraintTop_toTopOf="@id/img_content" />

</androidx.constraintlayout.widget.ConstraintLayout>